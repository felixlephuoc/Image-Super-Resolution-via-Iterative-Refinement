{
    "name": "sr_celebvhq_16_128_3_frames",
    "phase": "train", // train or val
    "multiframes":true, //train with multiframes dataset
    "gpu_ids": [0],
    //"gpu_ids": null,
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null
        //"resume_state": "pretrained_model/sr_celebvhq_230703_223404/checkpoint/I5_E1" //pretrain model or training state
        //"resume_state": "pretrained_model_janspiry/I640000_E37"
    },
    "datasets": {
        "train": {
            "name": "CelebvHQ",
            "mode": "HR", // whether need LR img
            "dataroot": "dataset/celebvhq_3_frames_0.5_seconds_16_128_train",
            "datatype": "img", //lmdb or img, path of img files
            "l_resolution": 16, // low resolution need to super_resolution
            "r_resolution": 128, // high resolution
            "batch_size": 16,
            "num_workers": 8,
            "use_shuffle": true,
            "data_len": -1 // -1 represents all data used in train
        },
        "val": {
            "name": "CelebvHQ",
            "mode": "LRHR",
            "dataroot": "dataset/celebvhq_3_frames_0.5_seconds_16_128_val",
            "datatype": "img", //lmdb or img, path of img files
            "l_resolution": 16,
            "r_resolution": 128,
            "data_len": 20 // data length in validation - Number of images used for Validation
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 12,
            "out_channel": 3,
            "inner_channel": 64,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                8
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 2,
            "dropout": 0.2
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "cosine",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "cosine",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 128,
            "channels": 3, //sample channel
            "n_frames": 3, // number of frames from each video
            "conditional": true // unconditional generation or conditional generation(super_resolution)
        }
    },
    "train": {
        "n_iter": 100000,
        "val_freq": 10000,
        "save_checkpoint_freq": 10000,
        "print_freq": 1000,
        "optimizer": {
            "type": "adam",
            "lr": 1e-5
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "sr_ffhq"
    }
}

